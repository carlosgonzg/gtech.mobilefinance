<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mobile Finance</title>
    <link rel="icon" href="~/images/favicon.ico">
    @Styles.Render("~/Content/css")
</head>
<body ng-app="mobileFinanceApp">
        <div class="header">
            <div class="navbar navbar-default navbar-static-top" role="navigation"  ng-controller="NavigationCtrl" ng-show="isAuthenticated">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#js-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#/">Mobile Finance</a>
                    </div>
                    <div class="collapse navbar-collapse" id="js-navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#/">Home</a></li>
                            <li><a ng-href="#/about">About</a></li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ userData.username }}<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a ng-click="userData.logout()"><i class="fa fa-sign-out"></i>Log out</a></li>
                                </ul>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <toaster-container></toaster-container>
        <div ng-controller="SessionCtrl"></div>
        <div class="container-fluid">
            @RenderBody()
        </div>
        <div class="footer">
            <div class="container">
               
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/angular")
        @Scripts.Render("~/scripts")
        @RenderSection("scripts", required: false)
</body>
</html>